<launch>
	<!-- docs: https://wiki.ros.org/nodelet/Tutorials/Running%20a%20nodelet -->
	<!-- docs: http://wiki.ros.org/depth_image_proc -->
	<!-- docs: https://wiki.ros.org/openni_launch -->
	<!-- docs: https://gist.github.com/bhaskara/2400165 -->

	<!-- Nodelet manager -->
	<node pkg="nodelet" type="nodelet" args="manager" name="depth_to_pointcloud_manager" output="screen"/>

	<!-- Nodelets! -->
	<!-- Convert it into a point cloud -->
	<node pkg="nodelet" type="nodelet" name="airsim_depth2cloud"
			args="load depth_image_proc_custom/point_cloud_xyz depth_to_pointcloud_manager" output="screen">
		<remap from="points" to="/airsim_node/PX4/mk1/DepthPerspective/points"/>
		<!-- THIS IS IGNORED BY DEPTH_IMAGE_PROC. THANKS -->
		<remap from="camera_info" to="/airsim_node/PX4/mk1/DepthPerspective/camera_info"/>
		<remap from="image_rect" to="/airsim_node/PX4/mk1/DepthPerspective/image"/>
	</node>
	
	<node pkg="nodelet" type="nodelet" name="airsim_depth2cloud_radial"
			args="load depth_image_proc_custom/point_cloud_xyz_radial depth_to_pointcloud_manager" output="screen">
		<remap from="points" to="/airsim_node/PX4/mk1/DepthPerspective/points_radial"/>
		<!-- THIS IS IGNORED BY DEPTH_IMAGE_PROC. THANKS -->
		<remap from="camera_info" to="/airsim_node/PX4/mk1/DepthPerspective/camera_info"/>
		<remap from="image_raw" to="/airsim_node/PX4/mk1/DepthPerspective/image"/>
	</node>
</launch>
